<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="@dimen/default_margin_double"
    android:layout_marginRight="@dimen/default_margin_double"
    android:layout_marginLeft="@dimen/default_margin_double">

    <TextView
        android:id="@+id/tvDocumentTitle"
        android:text="ggfggf"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bScannedDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_marginRight="@dimen/default_margin_double"
            android:gravity="center"
            android:text="Scaned Documents"
            android:textSize="12sp"
            android:onClick="ScannedDocumentImage"/>

        <Button
            android:id="@+id/bDigitalDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin_double"
            android:gravity="center"
            android:text="Digital Document"
            android:textSize="12sp"
            android:onClick="ShowDigitalDocument"/>

    </LinearLayout>

</LinearLayout>